@model Shop.Models.DB.BinhLuan

<div class="pr-form" id="form_@ViewBag.idSp" style="display: block">
    <form method="post" action="" id="new-review-form" class="new-review-form" onsubmit="Fr.submitForm(this);return false;">
        <input type="hidden" name="review[rating]">
        <input type="hidden" name="product_id" value="@ViewBag.idSp">
        <h3 class="pr-form-title">Write a review</h3>
        <fieldset class="pr-form-review">
            <div class="pr-form-review-rating">
                @Html.LabelFor(model => model.sao, new { @class = "pr-form-label" })
                @*<label class="pr-form-label" for="model => model.Email">Rating</label>*@
                <div class="pr-form-input pr-starrating ">
                    <a href="#" onclick="Fr.setRating(this);return false;" class="pr-icon pr-icon-star pr-icon-star-empty" data-value="1" aria-label="1 of 5 stars">1&nbsp;</a>
                    <a href="#" onclick="Fr.setRating(this);return false;" class="pr-icon pr-icon-star pr-icon-star-empty" data-value="2" aria-label="2 of 5 stars">2&nbsp;</a>
                    <a href="#" onclick="Fr.setRating(this);return false;" class="pr-icon pr-icon-star pr-icon-star-empty" data-value="3" aria-label="3 of 5 stars">3&nbsp;</a>
                    <a href="#" onclick="Fr.setRating(this);return false;" class="pr-icon pr-icon-star pr-icon-star-empty" data-value="4" aria-label="4 of 5 stars">4&nbsp;</a>
                    <a href="#" onclick="Fr.setRating(this);return false;" class="pr-icon pr-icon-star pr-icon-star-empty" data-value="5" aria-label="5 of 5 stars">5&nbsp;</a>
                </div>
            </div>
            <div class="pr-form-review-title">
                @Html.LabelFor(model => model.TitleText, new { @class = "pr-form-label" })
                @Html.TextBoxFor(model => model.TitleText, new { @class = "pr-form-input pr-form-input-text", @placeholder = "Give your review a title" })
                @*<label class="pr-form-label" for="review_title_1">Review Title</label>
                    <input class="pr-form-input pr-form-input-text" id="review_title_1" type="text" name="review[title]" value="" placeholder="Give your review a*@ title">
            </div>
            <div class="pr-form-review-body">
                @Html.LabelFor(model => model.Text, new { @class = "pr-form-label" })
                @Html.TextAreaFor(model => model.Text, new { @class = "pr-form-input pr-form-input-textarea", @placeholder = "Write your comments here", @rows = "10" })

                @*<label class="pr-form-label" for="review_body_">
                        Body of Review
                        <span role="status" aria-live="polite" aria-atomic="true">
                            <span class="pr-form-review-body-charactersremaining">(1500)</span>
                            <span class="visuallyhidden">characters remaining</span>
                        </span>
                    </label>
                    <div class="pr-form-input">
                        <textarea class="pr-form-input pr-form-input-textarea " id="review_body_1" data-product-id="1" name="review[body]" rows="10" placeholder="Write your comments here"></textarea>
                    </div>*@
            </div>
        </fieldset>
        <fieldset class="pr-form-actions">
            <input type="submit"  class="btn pr-button pr-button-primary button button-primary btn btn-primary" value="Submit Review">
        </fieldset>
    </form>
</div>